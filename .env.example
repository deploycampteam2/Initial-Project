# ExploreIndonesia - Environment Configuration

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
ENV=production
DEBUG=false

# =============================================================================
# API CONFIGURATION  
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# =============================================================================
# WEBSITE CONFIGURATION
# =============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
API_BASE_URL=http://api:8000

# =============================================================================
# DOMAIN & SSL
# =============================================================================
DOMAIN=your-domain.com
WWW_DOMAIN=www.your-domain.com

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=exploreindo

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# SECURITY
# =============================================================================
# Enable HTTPS redirect (true/false)
HTTPS_REDIRECT=false

# Rate limiting (requests per second)
API_RATE_LIMIT=10
WEB_RATE_LIMIT=5

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# MONITORING (Optional)
# =============================================================================
ENABLE_MONITORING=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# =============================================================================
# BACKUP (Optional)  
# =============================================================================
BACKUP_ENABLED=false
BACKUP_PATH=/backup/exploreindo
BACKUP_RETENTION_DAYS=7